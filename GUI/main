try:
    import ttkbootstrap as ttk
    from ttkbootstrap.constants import *
except ImportError:
    from tkinter import ttk
    from tkinter import *

class App:
    def __init__(self):
        # Create the main window with a theme
        self.window = ttk.Window(themename="darkly")
        self.window.title("My TTK Bootstrap App")
        self.window.geometry("400x300")

        # Create some example widgets
        # Label
        label = ttk.Label(
            self.window, 
            text="Welcome to TTK Bootstrap!", 
            font=("Helvetica", 16)
        )
        label.pack(pady=20)

        # Button
        button = ttk.Button(
            self.window,
            text="Click Me!",
            command=self.button_click,
            bootstyle="success"
        )
        button.pack(pady=10)

        # Entry field
        self.entry = ttk.Entry(self.window)
        self.entry.pack(pady=10)

    def button_click(self):
        print("Button clicked!")
        
if __name__ == "__main__":
    app = App()
    app.window.mainloop()